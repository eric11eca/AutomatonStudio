	script(type='text/javascript' src="/js/base64.js")
	script(type='text/javascript' src="/js/Canvas2Image.js")
	script(type='text/javascript' src="/js/syntree.js")
	script(type='text/javascript' src='/js/truth_view.js')
	

					

