extends layout
append head
	link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous")
	link(rel="stylesheet", href="/assets/css/truth.css")
	
block content
	.main-content
		.truth-content
			h1.intro Logic and Semantic Notebook
			h2.intro-content
				| A notebook of live coding for proporsitional logic, syllogistic logix (reasoning about the sizes of discrete sets), lambda calculus, set logic, formal semantics, and monotonicity based natural logic.
			
			.proof
				.leaves
					.assumpbox
						.proof 
							.leaves
								.assumpbox
									.proof
										.leaves
											.assumpbox
												.assumption All x are y
												.assumption All y are z
											.rule BARBARA
										.root
											.assumption All x are y
									.proof
										.leaves
											.assumpbox
												.assumption All x are y
												.assumption All y are z
											.rule BARBARA
										.root
											.assumption All x are y
								.rule BARBARA
							.root 
								.assumption All x are y
						.assumption All z are z
					.rule BARBARA
				.root 
					.assumption All a are x
				

			.card.cell
				.card-header
				.notebook.card-body
					blockquote.blockquote.mb-0
						.inputwrap
							textarea#input1(onkeyDown='compileKeyDown(event, this.id)')
						#buttonbar1.conclusion
							.addNew
								button#add1.add(type="button" class="btn btn-light" onclick='addNewCell(this.id)')
									ion-icon(name="add-outline")
								button#compile1.compile(type="button" class="btn btn-light" onclick='compileLogic(this.id)')
									ion-icon(name="caret-forward-outline")

block script
	script(type='text/javascript' src="https://unpkg.com/ionicons@5.1.2/dist/ionicons.js")
